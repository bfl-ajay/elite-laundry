{
  "name": "laundry-management-backend",
  "version": "1.0.0",
  "description": "Backend API for laundry management system",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "start:dev": "cross-env NODE_ENV=development node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "init-db": "node scripts/init-db.js",
    "prod:setup": "node scripts/setup-production.js",
    "prod:deploy": "node scripts/production-deploy.js",
    "prod:start": "cross-env NODE_ENV=production npm start",
    "validate:production": "node scripts/validate-production-config.js",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.1",
    "pg": "^8.11.3",
    "sharp": "^0.34.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  }
}
